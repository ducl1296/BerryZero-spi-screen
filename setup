#!/bin/bash
apt-get update  && apt-get upgrade
apt install xorg lightdm i3 polybar terminator
echo "first step DOOIT!!!!"
apt install feh compton unzip xpdf git ccrypt nemo python3-pip ffmpeg 
pip3 install youtube-dl
echo "2do step ready"
echo "loading config files"
git clone https://github.com/ducl1296/Debian-minimal-install-wmi3.git
cd Desbian-minimal-install-wmi3
cp fonts/* ~/.local/share/fonts
echo "fonts copiadas"
cp wallpapers/* ~/.config/wallpapers/
echo "wallpapers copiados"
cp scripts/* ~/.config/scripts/
echo "scripts copiados"
cp -r config/* ~/.config/
echo "configuraciones copiadas"
echo "sys will reboot"
sleep 5
systemctl reboot
